{
  // ESLint extension
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.validate": [
    "typescript",
    { "autoFix": true, "language": "typescript" }
  ],

  // File associations to languages
  "files.associations": {
    ".huskyrc": "json",
    ".lintstagedrc": "json",
    ".prettierrc": "json"
  },

  // Prettier
  // Disable the default JavaScript formatter (editorâ€™s built-in) and allows
  // Prettier to handle code formatting.
  "javascript.format.enable": false,

  // Format a file on save.
  "editor.formatOnSave": true,

  // ESLint
  // Use ESLint for JavaScript linting rather than built-in JavaScript and
  // TypeScript validation.
  "javascript.validate.enable": false,
  "typescript.validate.enable": false
}
